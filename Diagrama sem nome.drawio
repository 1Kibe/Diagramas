<?xml version="1.0" encoding="UTF-8"?>
<models>
  <!-- Estoque -->
  <Estoque>
    <quantidadeEstoque>Integer</quantidadeEstoque>
    <dataEntrada>Datetime</dataEntrada>
    <dataSaida>Datetime</dataSaida>
  </Estoque>

  <!-- Produto -->
  <Produto>
    <nome>String</nome>
    <valor>Decimal</valor>
    <codigo>String</codigo>
  </Produto>

  <!-- Cliente -->
  <Cliente>
    <historicoCompras>Text</historicoCompras>
    <tipoCliente>String</tipoCliente>
  </Cliente>

  <!-- Fornecedor -->
  <Fornecedor>
    <categoriaProduto>String</categoriaProduto>
    <tipoPagamento>String</tipoPagamento>
  </Fornecedor>

  <!-- Pagamento -->
  <Pagamento>
    <comprovante>String</comprovante>
    <vencimento>Datetime</vencimento>
    <meio>String</meio>
  </Pagamento>

  <!-- Vendas -->
  <Vendas>
    <preco>Decimal</preco>
  </Vendas>

  <!-- Compra -->
  <Compra>
    <data>Datetime</data>
    <notaFiscal>String</notaFiscal>
  </Compra>

  <!-- ContasReceber -->
  <ContasReceber>
    <cliente>Cliente</cliente>
  </ContasReceber>

  <!-- ContasPagar -->
  <ContasPagar>
    <fornecedor>Fornecedor</fornecedor>
  </ContasPagar>

  <!-- Pedidos -->
  <Pedidos>
    <dataPedido>Datetime</dataPedido>
    <dataEntrega>Datetime</dataEntrega>
    <status>String</status>
    <cliente>Cliente</cliente>
    <fornecedor>Fornecedor</fornecedor>
    <estoque>Estoque</estoque>
    <produto>Produto</produto>
  </Pedidos>

  <!-- Pessoa -->
  <Pessoa>
    <nome>String</nome>
    <endereco>String</endereco>
    <telefone>String</telefone>
    <email>String</email>
  </Pessoa>

  <!-- Fisica -->
  <Fisica>
    <cpf>String</cpf>
    <rg>String</rg>
    <genero>String</genero>
    <dataNascimento>Datetime</dataNascimento>
  </Fisica>

  <!-- Juridica -->
  <Juridica>
    <cnpj>String</cnpj>
    <inscricaoEstadual>String</inscricaoEstadual>
    <razaoSocial>String</razaoSocial>
  </Juridica>

  <!-- Empresa -->
  <Empresa>
    <tipo>String</tipo>
    <horarioFuncionamento>String</horarioFuncionamento>
    <ramo>String</ramo>
    <faturamento>Decimal</faturamento>
    <despesas>Decimal</despesas>
  </Empresa>

  <!-- Entregadores -->
  <Entregadores>
    <CNH>String</CNH>
  </Entregadores>

  <!-- Relacionamentos -->
  <Relacionamentos>
    <PedidosRelacionados>
      <relacionamento tipo="1..n">Cliente</relacionamento>
      <relacionamento tipo="1..n">Fornecedor</relacionamento>
      <relacionamento tipo="1..n">Estoque</relacionamento>
      <relacionamento tipo="1..n">Produto</relacionamento>
    </PedidosRelacionados>

    <EmpresaRelacionada>
      <relacionamento tipo="1..n">Entregadores</relacionamento>
      <relacionamento tipo="1..1">Juridica</relacionamento>
    </EmpresaRelacionada>

    <ContasRelacionadas>
      <relacionamento tipo="1..n">Cliente</relacionamento>
      <relacionamento tipo="1..n">Fornecedor</relacionamento>
    </ContasRelacionadas>
  </Relacionamentos>
</models>
